# WhatsApp Bot Configuration
BOT_NAME=RIMBAC WhatsApp Bot
BOT_VERSION=1.0.0

# Admin Configuration
ADMIN_NUMBERS=22212345678,22298765432

# Database Configuration
DATABASE_PATH=./data/rimbac_bot.db

# File Management
MAX_FILE_SIZE=52428800
DOWNLOAD_PATH=./downloads
TEMP_PATH=./temp

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=10
MAX_COMMANDS_PER_HOUR=50

# Features
ENABLE_DAILY_TIPS=true
ENABLE_WEEKLY_SUMMARIES=true
ENABLE_AUTO_BACKUP=true
ENABLE_QUIZ_REMINDERS=true

# External APIs (if needed)
RIMBAC_API_URL=https://rimbac.com/api
RIMBAC_API_KEY=your_api_key_here

# Timezone
TIMEZONE=Africa/Nouakchott

# Development
NODE_ENV=production
DEBUG=false
